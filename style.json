{
    "id": "1",
    "name": "SC maplibre styles",
    "zoom": 0,
    "pitch": 0,
    "version": 8,
    "center": [
        0,
        0
    ],
    "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#ffffff"
            },
            "filter": [
                "all"
            ],
            "layout": {
                "visibility": "visible"
            }
        },
        {
            "id": "countries-fill",
            "type": "fill",
            "source": "maplibre",
            "source-layer": "countries",
            "paint": {
                "fill-color": "#e4e4e4"
            }
        },
        {
            "id": "countries-hover",
            "type": "fill",
            "source": "maplibre",
            "source-layer": "countries",
            "paint": {
                "fill-color": "#FFFFFF",
                "fill-opacity": 0.4
            },
            "filter": [
                "all",
                [
                    "==",
                    "NAME",
                    ""
                ]
            ],
            "layout": {
                "visibility": "visible"
            }
        },
        {
            "id": "us-states-fill",
            "type": "fill",
            "source": "us-states-source",
            "layout": {
                "visibility": "none"
            },
            "paint": {
                "fill-color": "#e4e4e4"
            }
        },
        {
            "id": "us-states-hover",
            "type": "fill",
            "source": "us-states-source",
            "paint": {
                "fill-color": "#FFFFFF",
                "fill-opacity": 0.4
            },
            "filter": [
                "all",
                [
                    "==",
                    "NAME",
                    ""
                ]
            ],
            "layout": {
                "visibility": "none"
            }
        },
        {
            "id": "countries-boundary",
            "type": "line",
            "paint": {
                "line-color": "#9f9d9d",
                "line-width": 1
            },
            "layout": {
                "line-cap": "round",
                "line-join": "round",
                "visibility": "visible"
            },
            "source": "maplibre",
            "source-layer": "countries"
        },
        {
            "id": "us-states-boundary",
            "type": "line",
            "paint": {
                "line-color": "#9f9d9d",
                "line-width": 1
            },
            "layout": {
                "line-cap": "round",
                "line-join": "round",
                "visibility": "none"
            },
            "source": "us-states-source"
        },
        {
            "id": "countries-label",
            "type": "symbol",
            "paint": {
                "text-color": "rgba(8, 37, 77, 1)"
            },
            "filter": [
                "all"
            ],
            "layout": {
                "text-font": [
                    "Inter"
                ],
                "text-size": {
                    "stops": [
                        [
                            2,
                            10
                        ],
                        [
                            4,
                            12
                        ],
                        [
                            6,
                            16
                        ]
                    ]
                },
                "text-field": {
                    "stops": [
                        [
                            1,
                            "{ABBREV}"
                        ],
                        [
                            3,
                            "{NAME}"
                        ]
                    ]
                },
                "visibility": "visible",
                "text-max-width": 10
            },
            "source": "maplibre",
            "maxzoom": 24,
            "minzoom": 2,
            "source-layer": "centroids"
        },
        {
            "id": "us-states-label",
            "type": "symbol",
            "paint": {
                "text-color": "rgba(8, 37, 77, 1)"
            },
            "filter": [
                "all"
            ],
            "layout": {
                "text-font": [
                    "Inter"
                ],
                "text-size": {
                    "stops": [
                        [
                            2,
                            10
                        ],
                        [
                            4,
                            12
                        ],
                        [
                            6,
                            16
                        ]
                    ]
                },
                "text-field": {
                    "stops": [
                        [
                            2,
                            "{NAME}"
                        ]
                    ]
                },
                "visibility": "none",
                "text-max-width": 6
            },
            "source": "us-states-source",
            "maxzoom": 24,
            "minzoom": 2
        }
    ],
    "sources": {
        "maplibre": {
            "url": "https://demotiles.maplibre.org/tiles/tiles.json",
            "type": "vector"
        },
        "europe-source": {
            "data": "https://marchenkos.github.io/maplibre-tiles/europe_countries.geojson",
            "type": "geojson"
        },
        "us-states-source": {
            "data": "https://marchenkos.github.io/maplibre-tiles/us_states.geojson",
            "type": "geojson"
        },
        "european-union-source": {
            "data": "https://marchenkos.github.io/maplibre-tiles/european_union_countries.geojson",
            "type": "geojson"
        }
    }
}
