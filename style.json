{
    "id": "1",
    "name": "SC maplibre styles",
    "zoom": 0,
    "pitch": 0,
    "version": 8,
    "center": [-50, -20],
    "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
              "background-color": "#ffffff"
            },
            "filter": [
              "all"
            ],
            "layout": {
              "visibility": "visible"
            }
        },
        {
          "id": "countries-boundary",
          "type": "line",
          "paint": {
            "line-color": "#5a5a5a",
            "line-width": 1
          },
          "layout": {
              "line-cap": "round",
              "line-join": "round",
              "visibility": "visible"
          },
          "source": "maplibre",
          "source-layer": "countries"
        },
        {
          "id": "country-fills-hover",
          "type": "fill",
          "source": "maplibre",
          "source-layer": "countries",
          "paint": {
            "fill-color": "#FFFFFF",
            "fill-opacity": 0.4
          },
          "filter": ["all", ["==", "NAME", ""]]
        },
        {
            "id": "countries-label",
            "type": "symbol",
            "paint": {
                "text-color": "rgba(8, 37, 77, 1)",
                "text-halo-blur": {
                    "stops": [
                        [
                            2,
                            0.2
                        ],
                        [
                            6,
                            0
                        ]
                    ]
                },
                "text-halo-color": "rgba(255, 255, 255, 1)",
                "text-halo-width": {
                    "stops": [
                        [
                            2,
                            1
                        ],
                        [
                            6,
                            1.6
                        ]
                    ]
                }
            },
            "filter": [
                "all"
            ],
            "layout": {
                "text-font": [
                    "Open Sans Semibold"
                ],
                "text-size": {
                    "stops": [
                        [
                            2,
                            10
                        ],
                        [
                            4,
                            12
                        ],
                        [
                            6,
                            16
                        ]
                    ]
                },
                "text-field": {
                    "stops": [
                        [
                            2,
                            "{ABBREV}"
                        ],
                        [
                            4,
                            "{NAME}"
                        ]
                    ]
                },
                "visibility": "visible",
                "text-max-width": 10,
                "text-transform": {
                    "stops": [
                        [
                            0,
                            "uppercase"
                        ],
                        [
                            2,
                            "none"
                        ]
                    ]
                }
            },
            "source": "maplibre",
            "maxzoom": 24,
            "minzoom": 2,
            "source-layer": "centroids"
        }
    ],
    "sources": {
      "maplibre": {
        "url": "https://demotiles.maplibre.org/tiles/tiles.json",
        "type": "vector"
      }
    }
}
